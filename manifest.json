{
  "manifest_version": 3,
  "name": "Season Pass Wayback Machine",
  "description": "A simple app to claim rewards from previous seasons",
  "version": "1.0.0",
  "icons": {
    "128": "assets/icon.png"
  },
  "host_permissions": ["*://www.bungie.net/*"],
  "content_scripts": [
    {
      "matches": ["*://www.bungie.net/*"],
      "js": ["assets/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://www.bungie.net/*"],
      "resources": ["assets/styles.css"]
    }
  ]
}
